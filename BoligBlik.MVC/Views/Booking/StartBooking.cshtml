@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BoligBlik.MVC.Models.Bookings.CreateBookingViewModel


<h1 class="text-primary">Opret Booking</h1>
<h5 class="text-black">alle elementerne</h5>

<form asp-controller="Booking" asp-action="CreateBooking" method="post">
    <input type="hidden" asp-for="Item.Id" />
    <input type="hidden" asp-for="Item.Description" />
    <input type="hidden" asp-for="Item.Name" />
    <input type="hidden" asp-for="Item.Price" />
    <input type="hidden" asp-for="Item.Repairs" />
    <input type="hidden" asp-for="Item.Rules" />
    <input type="hidden" asp-for="Item.RowVersion" />
    <input type="hidden" asp-for="AddressId" />


    <div class="form-group">
        <label asp-for="StartTime" class="form-label">Starttidspunkt:</label>
        <input asp-for="StartTime" placeholder="Starttidspunkt" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime" class="form-label">Sluttidspunkt:</label>
        <input asp-for="EndTime" placeholder="Sluttidspunkt" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opret Booking</button>
</form>