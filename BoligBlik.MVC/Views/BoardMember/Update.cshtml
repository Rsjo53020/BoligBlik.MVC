@model BoligBlik.MVC.Models.BoardMembers.BoardMemberViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Ret</h1>

<h4>Bestyrelsesmedlem</h4>
@if (Model is null)
{
    <h1>Der er ikke fundet et bestyrelsesmedlem</h1>
}
else
{
    <form method="post">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Title" class="control-label">Titel</label>
                <input asp-for="Title" class="form-control" />
