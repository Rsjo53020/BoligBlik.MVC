@model IEnumerable<BoligBlik.MVC.Models.BookingItems.BookingItemViewModel>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rules)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repairs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <input type="hidden" asp-for="@item.Id" />
            <input type="hidden" asp-for="@item.RowVersion" />
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rules)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repairs)
            </td>
            <td>
                    <a asp-action="Edit" asp-controller="BookingItems" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Opdater</a> |
                    <a asp-action="Delete" asp-controller="BookingItems" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Fjern booking objekt</a>
            </td>
        </tr>
}
    
    </tbody>
</table>
<a asp-controller="BookingItems" asp-action="Create" class="me-2"><button type="button" class="px-4 py-sm-3 px-sm-5 btn btn-primary rounded-pill carousel-content-btn1 animated fadeInLeft">Tilføj booking objekt</button></a>
