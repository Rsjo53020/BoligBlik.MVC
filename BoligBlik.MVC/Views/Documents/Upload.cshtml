@model BoligBlik.MVC.Models.Documents.DocumentViewModel

@{
    ViewData["Title"] = "Upload Dokument";
}
@if (AuthorizationService.AuthorizeAsync(User, "ManagementPolicy").Result.Succeeded || AuthorizationService.AuthorizeAsync(User, "MemberPolicy").Result.Succeeded)
{
    <p></p>
    <div class="text-center mx-auto pb-5 wow fadeIn" data-wow-delay=".3s" style="max-width: 600px;">
        <h1 class="text-primary">Opret et Dokument</h1>
        <h5 class="text-black">upload her</h5>
    </div>
    <p></p>

    <form asp-action="Upload" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="FileUpload" class="control-label">Dokument</label>
            <input type="file" name="FileUpload" class="form-control"/>
            <span asp-validation-for="FileUpload" class="text-danger">Filstien er påkrævet.</span>

        </div>
        <div class="form-group">
            <input type="submit" value="Upload" class="btn btn-primary"/>
        </div>
    </form>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
