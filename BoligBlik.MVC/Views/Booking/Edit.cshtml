@model BoligBlik.MVC.Models.Bookings.BookingViewModel

@{
    ViewData["Title"] = "Rediger Booking";
}

<h1 class="text-primary">Rediger dine Bookinger</h1>

<h1>Rediger Booking</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />

            <input type="hidden" asp-for="Item.Id" />
            <input type="hidden" asp-for="Item.RowVersion" />
            <input type="hidden" asp-for="Item.Name" />
            <input type="hidden" asp-for="Item.Price" />
            <input type="hidden" asp-for="Item.Description" />
            <input type="hidden" asp-for="Item.Rules" />
            <input type="hidden" asp-for="Item.Repairs" />

            <input type="hidden" asp-for="AddressId" />

            <div class="form-group">
                <label class="control-label">Booking</label>
                <input class="form-control" value="@Model.Item?.Name" readonly />
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Start Tidspunkt</label>
                <input asp-for="StartTime" class="form-control" placeholder="Vælg starttidspunkt" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">Slut Tidspunkt</label>
                <input asp-for="EndTime" class="form-control" placeholder="Vælg sluttidspunkt" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opdater Booking" class="btn btn-primary" />

                <a asp-action="Delete" asp-controller="Booking" asp-route-id="@Model.Id" asp-route-rowVersion="@Convert.ToBase64String(@Model.RowVersion)" class="btn btn-danger">Slet Bookingen</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetUserBookings" asp-controller="Booking" class="btn btn-secondary btn-m">Tilbage til Oversigt</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
