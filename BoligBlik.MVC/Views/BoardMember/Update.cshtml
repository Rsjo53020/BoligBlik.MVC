            </div>
            <p> </p>
                <a asp-controller="BoardMember" asp-action="SetUser" class="me-2"><button type="button" class="px-4 py-sm-3 px-sm-5 btn btn-primary rounded-pill carousel-content-btn1 animated fadeInLeft">Vælg Bruger</button></a>
            <p> </p>
            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </div>
    </form>
}
<div>
    <a asp-action="ReadAll">Tilbage til listen</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
