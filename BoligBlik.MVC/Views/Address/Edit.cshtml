@model BoligBlik.MVC.Models.Addresses.AddressEditViewModel

@{
    ViewData["Title"] = "Rediger Adresse";
}

<h1 class="my-4">Rediger Adresse</h1>

<div class="container">
    <h4 class="mb-3">Adresse Detaljer</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Address.Street" class="control-label">Vejnavn</label>
                    <input asp-for="Address.Street" class="form-control" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.HouseNumber" class="control-label">Hus nr.</label>
                    <input asp-for="Address.HouseNumber" class="form-control" />
                    <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.Floor" class="control-label">Etage</label>
                    <input asp-for="Address.Floor" class="form-control" />
                    <span asp-validation-for="Address.Floor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.DoorNumber" class="control-label">Dør betegnelse</label>
                    <input asp-for="Address.DoorNumber" class="form-control" />
                    <span asp-validation-for="Address.DoorNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.City" class="control-label">By</label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.PostalCodeNumber" class="control-label">Post nr.</label>
                    <input asp-for="Address.PostalCodeNumber" class="form-control" />
                    <span asp-validation-for="Address.PostalCodeNumber" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Address.Id" />
                <input type="hidden" asp-for="Address.RowVersion" />

                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="Gem" class="btn btn-primary" />
                    <a asp-action="GetAllAddress" class="btn btn-secondary">Tilbage</a>
                </div>
            </form>
        </div>
    </div>

    <hr />
    <h4>Bookinger</h4>
    <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Navn</th>
                <th>Start</th>
                <th>Slut</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Address.Bookings)
            {
                <tr>
                    <td>@booking.Item.Name</td>
                    <td>@booking.StartTime.ToString("dd-MM-yyyy")</td>
                    <td>@booking.EndTime.ToString("dd-MM-yyyy")</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <h4>Brugere</h4>
    <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Fornavn</th>
                <th>Efternavn</th>
                <th>Email</th>
                <th>Telefon nr.</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Address.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.EmailAddress</td>
                    <td>@user.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <h4>Tilføj Ny Bruger</h4>
    <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Fornavn</th>
                <th>Efternavn</th>
                <th>Email</th>
                <th>Telefon nr.</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.UsersWithoutAddress)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.EmailAddress</td>
                    <td>@user.PhoneNumber</td>
                </tr>

                    <div class="form-group">
                        <label for="SelectedUserId">Vælg Bruger</label>
                        <select asp-for="SelectedUserId" class="form-control" asp-items="@(new SelectList(Model.UsersWithoutAddress, "Id", "FullName"))"></select>
                    </div>
                    <input type="hidden" asp-for="Address.Id" />
                    <button type="submit" class="btn btn-primary mt-3">Tilføj Bruger</button>
   
            }
        </tbody>
    </table>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}