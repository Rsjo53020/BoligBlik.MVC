@{
    ViewData["Title"] = "Alle Dokumenter";
}

<h1>Alle Dokumenter</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>Titel</th>
            <th>Beskrivelse</th>
            <th>Kategori</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var document in Model)
        {
            <tr>
                <td>@document.Title</td>
                <td>@document.Description</td>
                <td>@document.Category</td>
                <td>
                    <a asp-action="Delete" asp-controller="Documents" asp-route-FileUpload="@document.FileUpload" class="btn btn-primary btn-m" style="background-color: red; color: white; border-color: red;">Slet Dokument</a>
                    <a asp-action="Delete" asp-controller="Documents" asp-route-FileUpload="@document.FileUpload" class="btn btn-primary btn-m" style="background-color: blue; color: white; border-color: blue;">Hent Dokument</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Ingen dokumenter fundet.</p>
}

<style>
    /* Add your CSS styling here */
    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
    }

        .table th,
        .table td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
            color: #333;
            font-weight: bold;
        }

        .table tr:hover {
            background-color: #f5f5f5;
        }

    .form-group {
        margin-bottom: 0;
    }

    .form-control {
        display: inline-block;
        width: auto;
        vertical-align: middle;
    }

    .btn {
        display: inline-block;
        vertical-align: middle;
    }
</style>