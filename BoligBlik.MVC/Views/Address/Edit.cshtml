@model BoligBlik.MVC.Models.Addresses.AddressViewModel

@{
    ViewData["Title"] = "Rediger Adresse";

    // Få alle egenskaber på modellen, som vi ønsker at vise i formularen
    var properties = typeof(BoligBlik.MVC.Models.Addresses.AddressViewModel).GetProperties()
        .Where(p => p.Name != "Id" && p.Name != "RowVersion" && p.Name != "Bookings" && p.Name != "Users"); // Undtagen Id, RowVersion, Bookings og Users
}

<h1 class="my-4">Rediger Adresse</h1>

<h4>Adresse Detaljer</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @foreach (var property in properties)
            {
                <div class="form-group">
                    <label asp-for="@property.Name" class="control-label"></label>
                    <input asp-for="@property.Name" class="form-control" />
                    <span asp-validation-for="@property.Name" class="text-danger"></span>
                </div>
            }

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />

            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-primary" />
                <a asp-action="GetAllAddress" class="btn btn-secondary ml-2">Tilbage</a>
            </div>
        </form>
    </div>
</div>

<hr />
<h4>Bookinger</h4>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Navn</th>
            <th>Start</th>
            <th>Slut</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.Bookings)
        {
            <tr>
                <td>@booking.Item.Name</td>
                <td>@booking.StartTime.ToString("dd-MM-yyyy")</td>
                <td>@booking.EndTime.ToString("dd-MM-yyyy")</td>
            </tr>
        }
    </tbody>
</table>

<hr />
<h4>Brugere</h4>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
        <th>Fornavn</th>
        <th>Efternavn</th>
        <th>Email</th>
        <th>Tekefon nr.</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
                
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.EmailAddress</td>
            <td>@user.PhoneNumber</td>
        </tr>
    }
    </tbody>
</table>

