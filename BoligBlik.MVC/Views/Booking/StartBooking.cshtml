@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BoligBlik.MVC.Models.Bookings.CreateBookingViewModel

<h1>Opret Booking</h1>

<form asp-controller="Booking" asp-action="CreateBooking" method="post">
    <input type="hidden" asp-for="BookingItem.Id" />
    <input type="hidden" asp-for="BookingItem.Description" />
    <input type="hidden" asp-for="BookingItem.Name" />
    <input type="hidden" asp-for="BookingItem.Price" />
    <input type="hidden" asp-for="BookingItem.Repairs" />
    <input type="hidden" asp-for="BookingItem.Rules" />
    <input type="hidden" asp-for="BookingItem.RowVersion" />

    <div class="form-group">
        <label asp-for="BookingDates.StartDate" class="form-label">Starttidspunkt:</label>
        <input asp-for="BookingDates.StartDate" placeholder="Starttidspunkt" class="form-control" />
        <span asp-validation-for="BookingDates.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDates.EndDate" class="form-label">Sluttidspunkt:</label>
        <input asp-for="BookingDates.EndDate" placeholder="Sluttidspunkt" class="form-control" />
        <span asp-validation-for="BookingDates.EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opret Booking</button>
</form>